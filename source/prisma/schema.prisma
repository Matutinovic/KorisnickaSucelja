generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  trainings Training[]
}

model Training {
  id        Int              @id @default(autoincrement())
  name      String
  createdAt DateTime         @default(now())
  userId    Int
  exercises ExerciseEntry[]
  user      User             @relation(fields: [userId], references: [id])
  weeks     TrainingOnWeek[]
}

model Week {
  id        Int              @id @default(autoincrement())
  number    Int
  createdAt DateTime         @default(now())
  exercises ExerciseEntry[]
  trainings TrainingOnWeek[]
}

model TrainingOnWeek {
  id         Int      @id @default(autoincrement())
  trainingId Int
  weekId     Int
  training   Training @relation(fields: [trainingId], references: [id])
  week       Week     @relation(fields: [weekId], references: [id])

  @@unique([trainingId, weekId])
}

model ExerciseEntry {
  id         Int      @id @default(autoincrement())
  trainingId Int
  weekId     Int
  name       String
  sets       Int
  reps       Int
  weight     Float
  training   Training @relation(fields: [trainingId], references: [id])
  week       Week     @relation(fields: [weekId], references: [id])
}
